      "Geometry": {
        "class": "geometry.ForceField"
      }
    }
  },
  {
    "class": "org.megastage.ecs.Entity",
    "name": "Radar",
    "components": {
      "Synchronize": {
        "class": "data.Flag"
      },
      "Position": {
        "class": "data.Vector",
        "x": 14.5,
        "y": 1.5,
        "z": 4.5
      },
      "Rotation": {
        "class": "data.Rotation"
      },
      "BindTo": {
        "class": "data.EntityReference",
        "name": "Ship"
      },
      "ConnectedTo": {
        "class": "data.EntityReference",
        "name": "DCPU"
      },
      "Device": {
        "class": "device.Radar"
      },
      "Geometry": {
        "class": "geometry.Radar"
      }
    }
  }
]
